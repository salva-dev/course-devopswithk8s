{
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.3",
    "hono": "jsr:@hono/hono@^4.5.8"
  },
  "tasks": {
    "dev": "deno run --allow-net --watch ./src/main.ts",
    "build": "deno compile --allow-net --output=./dist/server ./src/main.ts"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
